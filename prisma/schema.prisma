
generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model User {
  id        String   @id @default(uuid())
  clerkId   String   @unique
  email     String   @unique
  role      UserRole @default(USER)
  firstName String?
  lastName  String?
  imageUrl  String?
  problems   Problem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([role])
}

model Problem {
  id          String     @id @default(uuid())
  title       String
  description String
  difficulty  Difficulty
  examples    Json         // Language-specific examples
  constraints String
  tags        String[]
  hints       String?
  editorial   String?
  testCases          Json 
  codeSnippets       Json
  referenceSolutions Json 
  userId     String
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@index([difficulty])
}

